<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cirno_eating_melon">

    <Button
        android:id="@+id/jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp"
        android:background="@drawable/button_selector"
        android:text="Jump To V8"
        android:textColor="#4c9eef" />

    <EditText
        android:textColor="#4c9eef"
        android:gravity="center"
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/edit_shape"
        android:ems="10"
        android:hint="群号"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="textPersonName"
        android:numeric="integer" />

    <EditText
        android:textColor="#4c9eef"
        android:gravity="center"
        android:id="@+id/uin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/group"
        android:background="@drawable/edit_shape"
        android:ems="10"
        android:hint="主人QQ"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="textPersonName"
        android:numeric="integer" />

    <Button
        android:id="@+id/master"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/uin"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/group"
        android:layout_toRightOf="@+id/group"
        android:background="@drawable/button_selector"
        android:text="添加/删除 主人"
        android:textColor="#4c9eef" />


</RelativeLayout>
